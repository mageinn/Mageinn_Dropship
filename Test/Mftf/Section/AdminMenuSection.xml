<?xml version="1.0" encoding="UTF-8"?>

<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="AdminMenuTitlesSection">
        <element name="Sales" type="text" selector="#menu-magento-sales-sales a" timeout="30"/>
        <element name="Store" type="text" selector="#menu-magento-backend-stores a" timeout="30"/>
    </section>
    <section name="AdminMenuSalesSection">
        <element name="Vendors" type="button" selector=".item-vendor-vendors a" timeout="30"/>
        <element name="ShippingRates" type="button" selector=".item-vendor-shipping-rates a" timeout="30"/>
    </section>
    <section name="AdminMenuStoreSection">
        <element name="CurrencyRates" type="button" selector="#system_config_tabs .admin__page-nav-items.items > li:nth-child(3) a" timeout="30"/>
    </section>
    <section name="AdminMenuShipmentSection">
        <element name="Shipments" type="button" selector=".data-grid.data-grid-draggable .data-row" timeout="30"/>
    </section>
    <section name="AdminConfigurationSection">
        <element name="Configuration" type="button" selector=".item-system-config a" timeout="30"/>
        <element name="General" type="button" selector=".admin__page-nav-title.title._collapsible" timeout="30"/>
        <element name="ChangeStore" type="button" selector="#store-change-button" timeout="30"/>
        <element name="StoreSwitch" type="button" selector=".store-switcher-website a" timeout="30"/>
        <element name="AcceptChanges" type="button" selector=".modal-footer .action-primary.action-accept" timeout="30"/>
        <element name="UncheckDefaultCountry" type="button" selector="#row_general_country_default #general_country_default_inherit" timeout="30"/>
        <element name="CurrencyOptionsLink" type="button" selector="#currency_options-head" timeout="30"/>
        <element name="BaseCurrency" type="select" selector="#currency_options_base" />
        <element name="DisplayCurrency" type="select" selector="#currency_options_default"/>
        <element name="AllowCurrencies" type="multiselect" selector="#currency_options_allow"/>
        <element name="SaveConfig" type="button" selector=".page-actions-inner #save" timeout="30"/>
    </section>
</sections>

