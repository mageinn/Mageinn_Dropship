<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mageinn_vendor_grid.mageinn_vendor_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Vendor</label>
            </button>
        </buttons>
        <spinner>mageinn_vendor_columns</spinner>
        <deps>
            <dep>mageinn_vendor_grid.mageinn_vendor_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="mageinn_vendor_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="mageinn_vendor_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>main_table.entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <exportButton name="export_button" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">mageinn_vendor_grid.mageinn_vendor_grid.mageinn_vendor_columns.ids</item>
                </item>
            </argument>
            <settings>
                <options>
                    <option name="cvs" xsi:type="array">
                        <item name="url" xsi:type="string">sales/vendorExport/gridToCsv</item>
                    </option>
                </options>
            </settings>
        </exportButton>
    </listingToolbar>
    <columns name="mageinn_vendor_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Mageinn\Vendor\Model\Source\IsActive"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="email">
            <settings>
                <filter>text</filter>
                <label translate="true">Email</label>
            </settings>
        </column>
        <column name="telephone">
            <settings>
                <filter>text</filter>
                <label translate="true">Telephone</label>
            </settings>
        </column>
        <column name="client_managed" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Mageinn\Vendor\Model\Source\IsEnabled"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Client Managed</label>
            </settings>
        </column>
        <column name="multiplier">
            <settings>
                <filter>text</filter>
                <label translate="true">Multiplier</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Mageinn\Vendor\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
